<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.controllers.LoginController" style="-fx-padding: 10" hgap="10"
          vgap="10">
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <JFXTextField fx:id="textUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <JFXPasswordField fx:id="textPassword" GridPane.rowIndex="1" GridPane.columnIndex="1" onKeyPressed="#keyPressed"/>

    <JFXButton maxWidth="Infinity" style="-fx-text-fill:WHITE;-fx-background-color:#5264AE;-fx-font-size:14px;"
               prefWidth="100" prefHeight="40" buttonType="RAISED" text="Login"
               GridPane.rowIndex="2" GridPane.columnSpan="2" onMouseClicked="#loginClicked"/>

</GridPane>