<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
          fx:controller="gui.controllers.StatisticsController" style="-fx-padding: 10" hgap="10" vgap="10">

    <Label text="Best-seller dish:" GridPane.columnIndex="0" GridPane.rowIndex="0" style = "-fx-font-weight: bold"/>
    <Label fx:id="bestSellerDishLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Best-seller dish today:" GridPane.columnIndex="0" GridPane.rowIndex="1" style = "-fx-font-weight: bold"/>
    <Label fx:id="bestSellerDishTodayLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Highest income day:" GridPane.columnIndex="0" GridPane.rowIndex="2" style = "-fx-font-weight: bold"/>
    <Label fx:id="highestIncomeLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Best customer:" GridPane.columnIndex="0" GridPane.rowIndex="3" style = "-fx-font-weight: bold"/>
    <Label fx:id="bestCustomerLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>


</GridPane>
